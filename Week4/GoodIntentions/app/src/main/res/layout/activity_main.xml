<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.goodintentions.MainActivity">

    <TextView
        android:text="Afstand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="93dp"
        android:id="@+id/textViewAfstand" />

    <TextView
        android:text="Periode:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAfstand"
        android:layout_alignStart="@+id/textViewAfstand"
        android:layout_marginTop="85dp"
        android:id="@+id/textViewPeriode" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="afstand in km"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="80dp"
        android:id="@+id/editTextAfstand" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="aantal dagen"
        android:ems="10"
        android:layout_below="@+id/editTextAfstand"
        android:layout_alignEnd="@+id/editTextAfstand"
        android:layout_marginTop="55dp"
        android:id="@+id/editTextPeriode"
        android:inputType="number" />

    <Button
        android:text="Bereken schema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:id="@+id/buttonberekenschema"
        android:layout_below="@+id/editTextPeriode"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
